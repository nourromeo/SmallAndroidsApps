<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- عنوان التطبيق -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BlocketArab"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <!-- وصف أو محتوى رئيسي -->
    <TextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse and buy used tools easily!"
        android:textSize="16sp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <!-- زر لعرض قائمة الأدوات -->
    <Button
        android:id="@+id/viewToolsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Tools"
        android:layout_below="@id/contentText"
        android:layout_centerHorizontal="true" />

    <!-- زر لتسجيل الخروج -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_below="@id/viewToolsButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
